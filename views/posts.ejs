<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <h1><a href="/">Wizard World Blog</a></h1>
    <h3>Posts:</h3>
    <div class="all-posts">
      <% if(locals.posts) { %> <% if(posts.length > 0) { %> <%
      posts.forEach(post => { %>

      <div class="post" id="_<%=post.id%>">
        <h4>Title: <%=post.title%></h4>
        <p>Content: <%=post.content%></p>
        <p>Id: <%=post.id%>, userId: <%=post.userId%></p>
      </div>
      <% })%> <%}%><%}%>
    </div>
  </body>
</html>
